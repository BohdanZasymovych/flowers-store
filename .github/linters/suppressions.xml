<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://checkstyle.sourceforge.net/dtds/suppressions_1_1.dtd">
<suppressions>
    <!-- Disable Javadoc and documentation-related checks for main and test sources -->
    <suppress files="src/(main|test)/java/.*" checks="JavadocPackage|JavadocVariable|MissingJavadocMethod|JavadocType|JavadocMethod|DesignForExtension"/>

    <!-- Disable MagicNumber for tests and examples -->
    <suppress files="src/(main|test)/java/.*" checks="MagicNumber"/>

    <!-- Disable FinalParameters for tests to avoid forcing final on parameters in tests -->
    <suppress files="src/test/java/.*" checks="FinalParameters"/>

    <!-- Disable MethodName for tests (test method naming conventions can differ) -->
    <suppress files="src/test/java/.*" checks="MethodName"/>

    <!-- Disable LineLength for tests/examples -->
    <suppress files="src/(main|test)/java/.*" checks="LineLength"/>
</suppressions>
